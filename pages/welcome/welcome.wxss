
.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  height: 100%;
  background-color: #b3d4db;
}
.headImg {
  width: 200rpx;
  height: 200rpx;
  border: 1px solid #f1f1f1;
  border-radius: 50%;
  margin-top: 100rpx;
}
.btn-start {
  margin-top: auto;
  margin-bottom: 100rpx;
  width: 500rpx;
  height: 80rpx;
  line-height: 80rpx;
  border: 1px solid #333;
  text-align: center;
  border-radius: 10rpx;
}
.user-name {
  font-family: 'MacroSoft YaHei';
  font-weight: bold;
  font-size: 32rpx;
  margin-top: 20rpx;
}