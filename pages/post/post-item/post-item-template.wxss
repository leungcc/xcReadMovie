.news-container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  margin: 10px 0;
  box-shadow: 0 1px 4px 1px #f5f5f5;
  background-color: #fff;
}
.news-container .news-author-date {
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  font-size: 24rpx;
  color: #666;
  
}
.news-container .news-author {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 1px solid #ccc;
  vertical-align: middle;
  margin-left: 10px;
  margin-right: 10px;
}
.news-container .news-date {
  color: #999;
  font-size: 20rpx;
  margin-left: 10px;
}
.news-container .news-image-wrap {
  width: 750rpx;
  height: 560rpx;
}
.news-container .news-image {
  width: 100%;
  max-height: 100%;
}
.news-container .news-title {
  width: 100%;
  font-size: 30rpx;
  text-align: left;
  letter-spacing: 1px;
  padding: 10rpx;
  text-indent: 10rpx;
}
.news-container .news-like {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
}
.news-container .news-content {
  padding: 10rpx;
  font-size: 22rpx;
  letter-spacing: 2rpx;
  color: #666;
  text-indent: 44rpx;
}
.news-container .news-like-image {
  width: 16px;
  height: 16px;
  vertical-align: middle;
}
.news-container .news-like-font {
  font-size: 12px;
  color: #999;
  vertical-align: middle;
  margin-right: 20px;
}